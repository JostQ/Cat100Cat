{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/deck.css">
{% endblock %}

{% block content %}

<section class="row mt-4 justify-content-center">
    <form class="col-8" method="post">
        {% if errrors.cards is defined %}
            {{ dump(errors) }}
            <div class="alert alert-danger">
                {{ errors.cards }}
            </div>
        {% endif %}
        <input type="hidden" value="{{ deckId }}" name="deckId">
        {% set i = 1 %}
        {% for card in cards %}
            <div class="col-12 mb-4 form-check bg-vert form-check-inline">
                <div class="col-4">
                    <img src="{{ card.image }}" alt="egg image" class="col-12">
                    <h4>{{ card.name }}</h4>
                </div>
                <div class="col-7">
                    <p>Calibre : {{ card.caliber }}</p>
                    <p>Raret√© : {{ card.rarity }}</p>
                    <p>Pouvoir : {{ card.power }}</p>
                </div>
                <div class="col-1">
                    <input type="checkbox" class="form-check-input" name="egg{{ i }}" value="{{ card.id }}">
                </div>
            </div>
            {% set i = i + 1 %}
        {% endfor %}
        <button class="btn btn-create">Ajouter</button>
    </form>
</section>

{% endblock %}