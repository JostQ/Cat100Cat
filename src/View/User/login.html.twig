{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="/assets/css/connexion.css">
{% endblock %}
{% block content %}
    <body class="login">
    <section class="row justify-content-center connexion">
        <h2 class="col-12 text-center">Se Connecter</h2>
        <form method="post" class="col-8 border form-inscription">

            {% if flash.validate is defined %}
                <div class="alert alert-success">
                    {{ flash.validate }}
                </div>
            {% endif %}
            {% if errors.login is defined %}
                <div class="alert alert-danger">
                    {{ errors.login }}
                </div>
            {% endif %}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="email" class="form-control" id="email" value="{{ user.email }}">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" class="form-control" id="password">
            </div>

            <button type="submit" class="btn button-connect">Se connecter</button>
        </form>
    </section>
    </body>
{% endblock %}